<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
    </style>

    <style name="AppTheme.Chip.Filter" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/colored_chip_filter_background</item>
        <item name="android:textColor">@color/colored_chip_filter_text</item>
    </style>

    <style name="AppTheme.SearchView.Light" parent="AppTheme">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="actionBarDivider">@android:color/white</item>
    </style>
</resources>
