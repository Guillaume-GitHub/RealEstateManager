<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Scrollable view here -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="top"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_detail_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_twotone_arrow_back_white_24px"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/fragment_detail_nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_app_margin"
                        android:layout_marginTop="@dimen/default_app_margin"
                        android:layout_marginEnd="@dimen/small_app_margin"
                        android:layout_marginBottom="@dimen/default_app_margin"
                        app:cardCornerRadius="@dimen/default_app_radius"
                        app:cardElevation="@dimen/default_app_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fragment_detail_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:padding="@dimen/default_app_padding"
                                android:text="Private sea Facing Bungalow with full facilities available"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fragment_detail_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:paddingStart="@dimen/default_app_padding"
                                android:paddingEnd="@dimen/default_app_padding"
                                android:text="12/05/2019 13:56" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fragment_detail_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/default_app_padding"
                                android:text="215000 $"
                                android:textColor="@color/colorSecondary"
                                android:textSize="18sp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_app_margin"
                        android:layout_marginEnd="@dimen/small_app_margin"
                        android:layout_marginBottom="@dimen/default_app_margin"
                        app:cardCornerRadius="@dimen/default_app_radius"
                        app:cardElevation="@dimen/default_app_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_app_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_app_margin"
                                android:text="@string/fragment_detail_title_detail"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:columnCount="4">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_detail_nb_rooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/large_app_margin"
                                    android:drawableTop="@drawable/ic_twotone_home_36px"
                                    android:text="6 rooms" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_detail_nb_surface"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/large_app_margin"
                                    android:drawableTop="@drawable/ic_twotone_surface_36px"
                                    android:text="730m2" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_detail_nb_bedrooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/large_app_margin"
                                    android:drawableTop="@drawable/ic_twotone_bedroom_36px"
                                    android:text="3 Bedrooms" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/fragment_detail_nb_bathrooms"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/large_app_margin"
                                    android:drawableTop="@drawable/ic_twotone_bathroom_36px"
                                    android:text="1 Bathroom" />

                            </GridLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_app_margin"
                        android:layout_marginEnd="@dimen/small_app_margin"
                        android:layout_marginBottom="@dimen/default_app_margin"
                        app:cardCornerRadius="@dimen/default_app_radius"
                        app:cardElevation="@dimen/default_app_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_app_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_app_margin"
                                android:text="@string/fragment_detail_title_description"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_detail_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/default_app_padding"
                                android:text="Clerval sur l'Axe Besançon-Belfort Montbéliard Charmante Maison Individuel T7 de 200 m2 ( possible appartement indépendant ) avec Grandes Terrasses, Dépendances, Tonnelle, Barbecue sur un Terrain Paysagé et Arboré de 1781 m2." />


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/fragment_item_detail_image_map_height"
                                android:background="@color/colorSecondary"
                                android:scaleType="centerCrop"
                                android:src="@drawable/map" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/fragment_detail_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/default_app_margin"
                                android:drawableStart="@drawable/ic_location_on_black_24dp"
                                android:paddingBottom="@dimen/default_app_padding"
                                android:text="11 rue de beauregard, 70190 Voray-sur-L'Ognon" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_app_margin"
                        android:layout_marginEnd="@dimen/small_app_margin"
                        android:layout_marginBottom="@dimen/default_app_margin"
                        app:cardCornerRadius="@dimen/default_app_radius"
                        app:cardElevation="@dimen/default_app_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_app_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/large_app_margin"
                                android:text="@string/fragment_detail_title_nearby"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/default_app_padding"
                                android:text="jshdfksdfkqlfsdbjfbqdsnldsnflksbdnfbjksdbjksdbf,nbsdnkjgbknskjbdsbndkjgbds,d,,f,fndbsn,,,fnsbhdh" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/small_app_margin"
                        android:layout_marginEnd="@dimen/small_app_margin"
                        android:layout_marginBottom="@dimen/default_app_margin"
                        app:cardCornerRadius="@dimen/default_app_radius"
                        app:cardElevation="@dimen/default_app_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/default_app_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/default_app_padding"
                                android:text="@string/fragment_detail_title_posted"
                                android:textSize="@dimen/title_text_size"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/fragment_detail_seller_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_centerInParent="true"
                                    android:text="Guillaume BAGUE" />

                                <ImageView
                                    android:layout_width="@dimen/fragment_item_detail_profile_image_width"
                                    android:layout_height="@dimen/fragment_item_detail_profile_image_height"
                                    android:layout_alignParentEnd="true"
                                    android:background="@drawable/circle_stroke_background"
                                    android:src="@color/colorPrimary" />

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fragment_detail_floating_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/large_app_margin"
        android:src="@drawable/ic_twotone_edit_24px"
        android:tint="@color/colorTextOnPrimary"
        app:layout_anchor="@+id/fragment_detail_nested_scroll_view"
        app:layout_anchorGravity="end|bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
