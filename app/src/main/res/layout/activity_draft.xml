<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.draft.DraftActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_draft_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_twotone_arrow_back_white_24px"
        app:titleTextColor="@color/colorTextOnPrimary"
        app:title="Draft">
    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/activity_draft_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_draft_toolbar"/>

</RelativeLayout>