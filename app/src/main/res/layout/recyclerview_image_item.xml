<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/recyclerview_image_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/recyclerview_image_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cicle_black_transparent_background_15"
        android:padding="@dimen/small_app_padding"
        android:layout_margin="@dimen/default_app_margin"
        android:src="@drawable/ic_twotone_delete_24px"
        app:layout_anchor="@id/recyclerview_image_item_image_view"
        app:layout_anchorGravity="end|top"
        android:clickable="true"
        android:focusable="true" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

